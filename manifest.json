{
  "manifest_version": 3,
  "name": "Temu Popup Removal Tool",
  "version": "1.1",
  "description": "A simple tool to remove Temu popups",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Remove Temu Popup",
    "default_icon": "16.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  }
}
